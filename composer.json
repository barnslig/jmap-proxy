{
  "name": "barnslig/jmap-proxy",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Leonard Techel",
      "email": "git@barnslig.eu"
    }
  ],
  "repositories": [
    {
      "type": "pear",
      "url": "https://pear.horde.org"
    }
  ],
  "require-dev": {
    "squizlabs/php_codesniffer": "3.*",
    "phpunit/phpunit": "^8"
  },
  "require": {
    "pear-pear.horde.org/Horde_Imap_Client": "^2.30.1@stable",
    "pear-pear.horde.org/Horde_Cache": "^2.5.5@stable",
    "league/route": "^4.3",
    "laminas/laminas-diactoros": "^2.2",
    "laminas/laminas-httphandlerrunner": "^1.1",
    "php-ds/php-ds": "^1.2",
    "justinrainbow/json-schema": "^5.2",
    "swaggest/json-diff": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "JP\\": "src"
    }
  },
  "scripts": {
    "pretty": "phpcbf --standard=PSR1,PSR2,PSR12 src/",
    "test": "phpunit --bootstrap vendor/autoload.php --testdox tests/"
  }
}
